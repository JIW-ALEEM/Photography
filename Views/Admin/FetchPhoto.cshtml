@model IEnumerable<Photography.Models.Photo>
@{
    Layout = "_AdminLayout";
}

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="#">Dashboard</a></li>
                        <li><a href="#">Table</a></li>
                        <li class="active">Photo Table</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Photo Table</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Photo Title</th>
                                        <th>Photo Image</th>
                                        <th>Photo Category</th>
                                        <th>Photo Description</th>
                                        <th>Update</th>
                                        <th>Delete</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.PhotoTitle</td>
                                            <td><img src="~/@item.PhotoUrl" class="d-flex m-auto" width="auto" height="auto" alt="..."></td>
                                            <td>@item.Category.CategoryName</td>
                                            <td>@item.PhotoDesc</td>
                                            <td><a class="btn btn-success" asp-action="UpdatePhoto" asp-controller="Admin" asp-route-id="@item.PhotoId">Update</a></td>
                                            <td><a class="btn btn-danger" asp-action="DeletePhoto" asp-controller="Admin" asp-route-id="@item.PhotoId">Delete</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->
</div>
