@model IEnumerable<Photography.Models.PhotoCategory>
@{
    Layout = "_AdminLayout";
}

    <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Table</a></li>
                        <li class="active">Photo Category Table</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Photo Category Table</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Category Name</th>
                                            <th>Category Image</th>
                                            <th>Update</th>
                                            <th>Delete</th>
                                            
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                         @foreach (var item in Model)
                                {
                                        <tr>
                                            <td>@item.CategoryName</td>
                                        <td><img src="~/@item.CategoryPhoto" class="d-flex m-auto" width="auto" height="auto" alt="..."></td>
                                            <td><a class="btn btn-success" asp-action="UpdatePhotoCtg" asp-controller="Admin" asp-route-id="@item.CategoryId">Update</a></td>
                                            <td><a class="btn btn-danger" asp-action="DeletePhotoCtg" asp-controller="Admin" asp-route-id="@item.CategoryId">Delete</a></td>
                                        </tr>
                                }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->
</div>
