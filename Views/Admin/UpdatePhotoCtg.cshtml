@model Photography.Models.PhotoCategory;
@{
    Layout = "_AdminLayout";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">Table</a></li>
                    <li class="active">Update Photo Category</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <div class="animated fadeIn">

        <div class="row mt-5 pt-2">
            <div class="col-lg-3"></div>
            <div class="col-lg-6 mt-5">
                <div class="card mt-5">
                    <div class="card-header">
                        <strong class="card-title">Update </strong>
                    </div>
                    <div class="card-body">

                        <div id="pay-invoice">
                            <div class="card-body">
                                <div class="card-title">
                                    <h3 class="text-center">Photo Category</h3>
                                </div>
                                <hr>
                                <form method="post" enctype="multipart/form-data">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <input type="hidden" asp-for="CategoryId" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label for="cc-payment" class="control-label mb-1">Category Name</label>
                                        <input type="text" asp-for="CategoryName" class="form-control" aria-required="true" required aria-invalid="false">
                                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group has-success">
                                        <label for="cc-name" class="control-label mb-1">Select Category Image</label>
                                        <input type="file" class="form-control cc-image valid m-0 p-1" name="file" required accept="image/*" onchange="previewImage(event)">
                                        
                                        @if (Model != null && Model.CategoryPhoto != null)
                                        {
                                            <img src="~/@Model.CategoryPhoto" style="margin-top:10px; max-width:50%; height:auto;">
                                        }
                                        <label for="cc-name" id="image-labe" style="display:none;" class="control-label mb-1">Updated Image</label>
                                        <span class="help-block field-validation-valid" data-valmsg-for="cc-image" data-valmsg-replace="true"></span>
                                        <img id="image-preview" src="" alt="Image Preview" style="display:none; margin-top:10px; max-width:50%; height:auto;">
                                    </div>
                                    <div>
                                        <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                            Update
                                            @*<span id="payment-button-amount"> Add</span>
                                            <span id="payment-button-sending" style="display:none;">Adding…</span> *@
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="col-lg-3"></div>
        </div>

    </div>
</div>

<script>
    function previewImage(event) {
        var file = event.target.files[0];
        if (file && file.type.startsWith('image/')) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var preview = document.getElementById('image-preview');
                var preview2 = document.getElementById('image-labe');
                preview.src = e.target.result;
                preview.style.display = 'block';
                preview2.style.display = 'block';
            };
            reader.readAsDataURL(file);
        } else {
            alert('Please select a valid image file.');
            event.target.value = '';
        }
    }
</script>
