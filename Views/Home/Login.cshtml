@model Photography.Models.User
<main>

    <div class="slider-area ">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 text-center">
                            <h2>Login</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <section class="contact-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                </div>

                <div class="col-lg-8">
                    <form class="form-contact contact_form" method="post">
                                <div class="form-group">
                                    <input type="hidden" class="form-control" asp-for="UserId">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" asp-for="UserEmail" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Email'" placeholder="Enter Email">
                                </div>

                                <div class="form-group">
                                    <input class="form-control" asp-for="UserPassword" type="password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Password'" placeholder="Enter Password">
                                </div>

                        <div class="form-group mt-3 text-center">
                            <button type="submit" class="button button-contactForm boxed-btn">Login</button>
                        </div>
                    </form>
                </div>
                    <div class="col-lg-2">
                </div>
            </div>
        </div>
    </section>

</main>

@{
    string RegMessage = TempData["RegMsg"] as string;
}

@if (!string.IsNullOrEmpty(RegMessage))
{
    <script>
        alert("@RegMessage");
    </script>
}